@using ModelsLibrary
@using ModelsLibrary.Models;
@{
    var steelPipes = ViewBag.data as List<SteelPipe>;
}
<!DOCTYPE html>
<html>
<head>
    <title>Steel Pipes</title>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".edit-button").click(
                function () {
                    var row = $(this).closest("tr");
                    var pipeId = row.find(".pipe-id").text();
                    var outerDiameter = row.find(".outer-diameter").text();
                    var thickness = row.find(".thickness").text();
                    var linearInternalVolume = row.find(".linear-internal-volume").text();
                    var linearWeight = row.find(".linear-weight").text();

                    $("#selected-data [name='pipeId']").val(pipeId);
                    $("#selected-data [name='outerDiameter']").val(outerDiameter);
                    $("#selected-data [name='thickness']").val(thickness);
                    $("#selected-data [name='linearInternalVolume']").val(linearInternalVolume);
                    $("#selected-data [name='linearWeight']").val(linearWeight);
                }
            );
        });
    </script>
    <style>
        .container {
            display: flex;
        }

        .table-container {
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <h1>
        <p>
            <a href='@Url.Action("Create", "SteelPipe")'>Добавить трубу</a>
            <a href='@Url.Action("Delete", "SteelPipe")'>Удалить трубу</a>
            <a href='@Url.Action("Index", "Home")'>Вернуться на главную</a>
        </p>
    </h1>
    <h1>Список труб</h1>
    <div class="container">
        <div class="table-container">
            <table border="1">
                <tr>
                    <th>Код</th>
                    <th>Внешний диаметр</th>
                    <th>Толщина</th>
                    <th>Линейный внутренний объем</th>
                    <th>Линейная масса</th>
                    <th>Действия</th>
                </tr>

                @foreach (SteelPipe steelPipe in steelPipes)
                {
                    <tr>
                        <td class="pipe-id">@steelPipe.PipeId</td>
                        <td class="outer-diameter">@steelPipe.OuterDiameter</td>
                        <td class="thickness">@steelPipe.Thickness</td>
                        <td class="linear-internal-volume">@steelPipe.LinearInternalVolume</td>
                        <td class="linear-weight">@steelPipe.LinearWeight</td>
                        <td><button class="edit-button">Редактировать</button></td>
                    </tr>
                }
            </table>
        </div>
        <div id="selected-data">
            <h2>Выбранные данные</h2>
            <form action="/SteelPipe/Update" method="post">
                <label for="pipeId">Код:</label>
                <input type="text" name="pipeId" readonly>
                <br>
                <label for="outerDiameter">Внешний диаметр:</label>
                <input type="number" name="outerDiameter" required>
                <br>
                <label for="thickness">Толщина:</label>
                <input type="number" name="thickness" required>
                <br>
                <label for="linearInternalVolume">Линейный внутренний объем:</label>
                <input type="number" name="linearInternalVolume" required>
                <br>
                <label for="linearWeight">Линейная масса:</label>
                <input type="number" name="linearWeight" required>
                <br>
                <button type="submit">Сохранить</button>
            </form>
        </div>
    </div>
</body>
</html>
