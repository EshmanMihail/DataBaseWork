        function executeFourthTask() {
            $.ajax({
                type: "POST",
                url: "@Url.Action("FourthTask", "Requirements")",
                success: function (data) {
                    displayResult(data);
                },
                error: function () {
                    alert("Ошибка выполнения запроса.");
                }
            });
        }

        function displayResult(data) {
            var resultContainer = $("#resultContainer");
            resultContainer.empty();

            var table = $("<table>");
            var headerRow = $("<tr>");
            headerRow.append("<th>Колонка 1</th>");
            headerRow.append("<th>Колонка 2</th>");
            // Добавьте остальные колонки в соответствии с вашими данными

            table.append(headerRow);

            // Распарсьте данные и добавьте строки в таблицу

            resultContainer.append(table);
        }
    </script>
}
