<div id="resultContainer"></div>

@section Scripts {
    <script>
        function executeFirstTask() {
            $.ajax({
                type: "POST",
                url: "@Url.Action("FirstTask", "Requirements")",
                success: function (data) {
                    displayResult(data);
                },
                error: function () {
                    alert("Ошибка выполнения запроса.");
                }
            });
        }

        function executeSecondTask() {
