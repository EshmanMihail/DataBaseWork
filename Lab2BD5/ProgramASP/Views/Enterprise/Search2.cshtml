@{
	var result = ViewBag.data as List<string> ?? new();
	var text = ViewBag.text as string ?? "";
}
@using InfoStruct.Sessions;
@model SessionSearchStuff;

<form >
	<label for="searchColumn">Выберите столбец для поиска:</label><br />
	<select name="searchColumn">
		<option value="EnterpriseName" @(Model.columnName == "EnterpriseName" ? "selected" : "")>EnterpriseName</option>
		<option value="ManagementOrganization" @(Model.columnName == "ManagementOrganization" ? "selected" : "")>Organization</option>
	</select><br />

	<label for="searchText">Введите текст для поиска:</label><br />
	<input type="text" name="searchText" value="@Model.textForSearch"/><br />

	<input type="submit" value="Найти" />
</form>

<div>
	@foreach (var item in result)
	{
		<p>@item</p>
	}
</div>