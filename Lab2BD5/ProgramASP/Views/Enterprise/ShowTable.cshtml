@using ModelsLibrary.Models;
@{
    var enterprises = ViewBag.data as List<Enterprise>;
}
<!DOCTYPE html>
<html>
<head>
    <title>Enterprises</title>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".edit-button").click(
                function () {
                    var row = $(this).closest("tr");
                    var id = row.find(".enterprise-id").text();
                    var name = row.find(".enterprise-name").text();
                    var organization = row.find(".management-organization").text();

                    $("#selected-data [name='enterpriceId']").val(id);
                    $("#selected-data [name='name']").val(name);
                    $("#selected-data [name='organization']").val(organization);
                }
            );
        });
    </script>
    <style>
        .container {
            display: flex;
        }

        .table-container {
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <h1>
        <p>
            <a href='@Url.Action("Create", "Enterprise")'>Добавить компанию</a>
            <a href='@Url.Action("Delete", "Enterprise")'>Удалить компанию</a>
            <a href='@Url.Action("Index", "Home")'>Вернуться на главную</a>
        </p>
    </h1>
    <h1>Список компаний</h1>
    <div class="container">
        <div class="table-container">
            <table border="1">
                <tr>
                    <th>Код</th>
                    <th>Название</th>
                    <th>Организация</th>
                    <th>Действия</th>
                </tr>

                @foreach (Enterprise enterprise in enterprises)
                {
                    <tr>
                        <td class="enterprise-id">@enterprise.ID</td>
                        <td class="enterprise-name">@enterprise.EnterpriseName</td>
                        <td class="management-organization">@enterprise.ManagementOrganization</td>
                        <td><button class="edit-button">Редактировать</button></td>
                    </tr>
                }
            </table>
        </div>
        <div id="selected-data">
            <h2>Выбранные данные</h2>
            <form action="/Enterprise/Update" method="post">
                <label for="enterpriceId">Код:</label>
                <input type="text" name="enterpriceId" readonly>
                <br>
                <label for="name">Название:</label>
                <input type="text" name="name" required>
                <br>
                <label for="organization">Организация:</label>
                <input type="text" name="organization" required>
                <br>
                <button type="submit">Сохранить</button>
            </form>
        </div>
    </div>
</body>
</html>