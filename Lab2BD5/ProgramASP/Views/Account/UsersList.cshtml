@using Microsoft.AspNetCore.Identity;
@{
    var users = ViewBag.Users as List<IdentityUser>;
}
<html>
<head>
    <title>Все пользователи</title>
    <link rel="stylesheet" type="text/css" href="/css/UsersList.css" />
</head>
<body>
    <div class="centered-div">
        <a href='@Url.Action("Index", "Home")' class="button">На главную</a>
        <h2>Список пользователей</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Номер телефона</th>
                    <th>Роль</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.PhoneNumber</td>
                        <td>@string.Join("", ViewData[$"Roles_{user.Id}"] as IList<string>)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>