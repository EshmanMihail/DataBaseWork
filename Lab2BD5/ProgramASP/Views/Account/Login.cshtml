<html>
<head>
    <title>Вход</title>
    <link rel="stylesheet" type="text/css" href="/css/Login.css" />
</head>
<body>
    <div>
        <a href='@Url.Action("Index", "Home")'>На главную</a>
        <a href='@Url.Action("Register", "Account")'>Зарегестрироваться</a>
    </div>
    <form method="post">
        <div>
            <label for="PhoneNumber">Номер телефона:</label>
            <input id="PhoneNumber" type="number" name="PhoneNumber" required />
        </div>
        <div>
            <label for="Password">Пароль:</label>
            <input id="Password" type="password" name="Password" required />
        </div>
        <button type="submit">Войти</button>
    </form>
    @Html.ValidationSummary(true, "", new { @class = "login-errors" });
</body>
</html>
